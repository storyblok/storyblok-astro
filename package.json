{
  "name": "@storyblok/astro-ws",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "./lib",
    "./playground",
    "./playground-ssr",
    "./playground-test"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=lib & npm run demo",
    "demo": "npm run dev --workspace=playground",
    "demo-test": "npm run dev --workspace=playground-test",
    "demo-ssr": "npm run dev --workspace=playground-ssr",
    "build": "npm run build --workspace=lib",
    "test:e2e": "npm run test:e2e --workspace=lib",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@typescript-eslint/parser": "^7.7.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-astro": "^0.34.0",
    "husky": "^9.0.11",
    "lint-staged": "^15.2.2",
    "prettier": "^3.2.5",
    "prettier-plugin-astro": "^0.13.0"
  },
  "lint-staged": {
    "*.{astro,js,css}": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "plugin:astro/recommended",
      "prettier"
    ],
    "globals": {
      "globalThis": true
    },
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ],
    "ignorePatterns": "dist/"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false,
    "plugins": [
      "prettier-plugin-astro"
    ],
    "overrides": [
      {
        "files": "**/*.astro",
        "options": {
          "parser": "astro"
        }
      }
    ]
  }
}