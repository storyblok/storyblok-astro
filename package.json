{
  "name": "@storyblok/astro-ws",
  "private": true,
  "version": "0.0.1",
  "workspaces": [
    "./lib",
    "./playground",
    "./playground-ssr",
    "./playground-test"
  ],
  "scripts": {
    "dev": "npm run dev --workspace=lib & npm run demo",
    "demo": "npm run dev --workspace=playground",
    "demo-ssr": "npm run dev-ssr --workspace=playground-ssr",
    "build": "npm run build --workspace=lib",
    "test:e2e": "npm run test:e2e --workspace=lib",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.4.4",
    "@commitlint/config-conventional": "^17.4.4",
    "@typescript-eslint/parser": "^5.54.1",
    "eslint": "^8.35.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-astro": "^0.23.0",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "prettier": "^2.8.4",
    "prettier-plugin-astro": "^0.8.0"
  },
  "lint-staged": {
    "*.{astro,js,css}": [
      "prettier --write",
      "eslint"
    ],
    "*.md": [
      "prettier --write"
    ]
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "eslintConfig": {
    "env": {
      "node": true
    },
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "plugin:astro/recommended",
      "prettier"
    ],
    "globals": {
      "globalThis": true
    },
    "overrides": [
      {
        "files": [
          "*.astro"
        ],
        "parser": "astro-eslint-parser",
        "parserOptions": {
          "parser": "@typescript-eslint/parser"
        }
      }
    ],
    "ignorePatterns": "dist/"
  },
  "prettier": {
    "trailingComma": "es5",
    "tabWidth": 2,
    "semi": true,
    "singleQuote": false
  }
}